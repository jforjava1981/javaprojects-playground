<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.chatter.service.domain.vo.ChatRequest" table="chat_requests" dynamic-insert="true" dynamic-update="false">
		<id column="id" name="id" type="java.lang.Integer">
			<generator class="identity" />
		</id>
		<many-to-one name="sender" class="com.chatter.service.domain.vo.User">
			<column name="from_user" />
		</many-to-one>
		<many-to-one name="recipient" class="com.chatter.service.domain.vo.User">
			<column name="to_user" />
		</many-to-one>
    </class>
</hibernate-mapping>
